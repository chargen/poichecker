
= semantic_form_for [:admin, @data_set, :place, @candidate] do |f|
  = f.inputs I18n.t('candidates.new.panel.new') do
    = f.input :name
    = f.input :street
    = f.input :housenumber
    = f.input :postcode
    = f.input :city
    = f.input :wheelchair, as: :select, collection: [:yes, :limited, :no], prompt: false
    = f.input :website
    = f.input :phone
    = f.input :lat, input_html: { value: nil, readonly: true }, hint: true
    = f.input :lon, input_html: { value: nil, readonly: true }
  = f.actions do
    = f.action :submit, label: I18n.t('formtastic.actions.candidate.create')
    = f.action :cancel

