h3 "POIchecker ist auf Dein Ortswissen angewiesen. Gib an wo Du Dich auskennst oder klicke auf Standort bestimmen. Die POIs werden dann nach NÃ¤he zu diesem Ort angezeigt."

columns do
  column id: "locate_me" do
    active_admin_form_for(current_admin_user, :url => update_location_admin_account_path(current_admin_user), :method => 'PUT', html: { id: "user_address_query_form"}) do |f|
      f.inputs "Standort automatisch bestimmen" do
        f.action :cancel, label: fa_icon('location-arrow') + ' Mein Standort', button_html: { class: "locate_me primary-button"}, as: :link
      end
      f.inputs "Oder an einer bestimmten Adresse" do
        f.input :address,
          hint: "Gib eine Adresse ein, an der Du dich gut auskennst.",
          placeholder: "z.B. Unter den Linden 1, 10117 Berlin"
        f.input :lat, as: :hidden
        f.input :lon, as: :hidden
        f.input :use_location, as: :hidden, input_html: { value: 0 }
        f.action :submit, label: "festlegen", class: 'light-button'
      end
    end
  end
  column do
    unless current_admin_user.location.nil?
      panel "Map" do
        render partial: "map"
      end
    end
  end
end

render partial: 'active_admin/locate_me'